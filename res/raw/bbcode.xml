<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://kefir-bb.sourceforge.net/schemas"
        xsi:schemaLocation="http://kefir-bb.sourceforge.net/schemas http://kefir-bb.sourceforge.net/schemas/kefir-bb-0.5.xsd">
    <!-- XML escape symbols -->
    <scope name="ROOT">

        <code name="bold" priority="10">
            <pattern>[b]<var inherit="true"/>[/b]</pattern>
            <template>&lt;em&gt;<var/>&lt;/em&gt;</template>
        </code> 
        <code name="italic" priority="10">
            <pattern>[i]<var inherit="true"/>[/i]</pattern>
            <template>&lt;strong&gt;<var/>&lt;/strong&gt;</template>
        </code> 
        <code name="underlined" priority="10">
            <pattern>[u]<var inherit="true"/>[/u]</pattern>
            <template>&lt;u&gt;<var/>&lt;/u&gt;</template>
        </code> 
        <code name="striked" priority="10">
            <pattern>[s]<var inherit="true"/>[/s]</pattern>
            <template>&lt;strike&gt;<var/>&lt;/strike&gt;</template>
        </code> 
        <code name="spoiler" priority="9">
            <pattern>[spoiler]<var inherit="true"/>[/spoiler]</pattern>
            <template>&lt;spoiler&gt;<var/>&lt;/spoiler&gt;</template>
        </code> 
        <code name="mod" priority="9">
            <pattern>[mod]<var inherit="true"/>[/mod]</pattern>
            <template>&lt;mod&gt;<var/>&lt;/mod&gt;</template>
        </code> 
        <code name="list1">
            <pattern>[list]<var inherit="true"/>[/list]</pattern>
            <template>&lt;ul&gt;<var/>&lt;/ul&gt;</template>
        </code> 
        <code name="euro">
            <pattern>Â¤</pattern>
            <template>&amp;euro;</template>
        </code> 
        <code name="list2">
            <pattern>[list=<var name="tag"/>]<var inherit="true" name="content"/>[/list]</pattern>
            <template>&lt;ul&gt;<var name="content"/>&lt;/ul&gt;</template>
        </code> 
        <code name="quote" priority="5">
            <pattern>[quote=<var name="tag"/>][b]<var inherit="true" name="content"/>[/b][/quote]</pattern>
            <template>&lt;blockquote&gt;HEAD<var name="tag"/>CONTENT<var name="content"/>&lt;/blockquote&gt;</template>
        </code> 
        <code name="quote2">
            <pattern>[quote=<var name="tag"/>]<var inherit="true" name="content"/>[/quote]</pattern>
            <template>&lt;blockquote&gt;HEAD<var name="tag"/>CONTENT<var name="content"/>&lt;/blockquote&gt;</template>
        </code> 
        <code name="quote3">
            <pattern>[quote]<var inherit="true" name="content"/>[/quote]</pattern>
            <template>&lt;blockquote&gt;<var name="content"/>&lt;/blockquote&gt;</template>
        </code> 
        <code name="quote4" priority="5">
            <pattern>[quote][b]<var inherit="true" name="content"/>[/b][/quote]</pattern>
            <template>&lt;blockquote&gt;<var name="content"/>&lt;/blockquote&gt;</template>
        </code> 
        <code name="url1">
            <pattern>[url=<var name="href"/>]<var inherit="true" name="content"/>[/url]</pattern>
            <template>&lt;a href="<var name="href" />"&gt;<var name="content"/>&lt;/a&gt;</template>
        </code> 
        <code name="url2">
            <pattern>[url]<var inherit="true" name="href"/>[/url]</pattern>
            <template>&lt;a href="<var name="href" />"&gt;<var name="href"/>&lt;/a&gt;</template>
        </code> 
        <code name="code">
            <pattern>[code]<var inherit="true" name="content"/>[/code]</pattern>
            <template>&lt;br /&gt;&lt;code&gt;<var name="content"/>&lt;br /&gt;&lt;/code&gt;</template>
        </code> 
        <code name="image" priority="6">
            <pattern>[img]<var inherit="true" name="href"/>[/img]</pattern>
            <template>&lt;img src="<var name="href" />" /&gt;</template>
        </code>
    </scope>
</configuration> 