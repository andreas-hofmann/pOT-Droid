<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="first_preferencescreen">
    <PreferenceCategory
            android:title="Foreneinstellungen">
    
	    <Preference
	          android:title="Login"
	          android:summary="mods.de Forum Login"
	          android:key="loginPref" />
	          
	     <CheckBoxPreference
            android:key="bookmarkStart"
            android:title="Bookmarks als Startseite" />    
            
        <CheckBoxPreference
            android:key="marknewposts"
            android:title="Ungelesene Posts markieren" />    
        
        <ListPreference
             android:title="Bilder Laden"
             android:summary="Bilder im Thread laden"
             android:key="loadImages"
             android:defaultValue="0"
             android:entries="@array/loadImages"
             android:entryValues="@array/loadImagesValues" />
        
        <ListPreference 
             android:title="Style Threadansicht"
             android:key="style" 
             android:summary="Style der Forenansicht auswählen" 
             android:entries="@array/forumStyle"
             android:entryValues="@array/forumStyleValues" />
        
        <CheckBoxPreference
            android:key="volumeControl"
            android:defaultValue="false"
            android:summary="Volume buttons zum Blättern nutzen."
            android:title="Volume Buttons blättern!" />
        
        <CheckBoxPreference
            android:key="gravityInThreads"
            android:defaultValue="false"
            android:summary="Auto-scroll nach links in Threads."
            android:title="Experimentell!!! Scrollt automatisch wieder nach links in der Thread Ansicht." />
            
        <Preference
              android:title="About"
              android:summary="Über diese App"
              android:key="aboutPref" />
    </PreferenceCategory>
    
