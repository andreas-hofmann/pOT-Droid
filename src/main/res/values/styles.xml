<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PotDroidDark" parent="@style/PotDroidDarkBase">
        <item name="bbListItemPaddingLR">15dp</item>
        <item name="bbListItemPaddingTB">10dp</item>
        <item name="bbListItemFontPrimary">18sp</item>
        <item name="bbListItemFontSecondary">15sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidDarkCompact" parent="@style/PotDroidDarkBase">
        <item name="bbListItemPaddingLR">10dp</item>
        <item name="bbListItemPaddingTB">5dp</item>
        <item name="bbListItemFontPrimary">16sp</item>
        <item name="bbListItemFontSecondary">14sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidLight" parent="@style/PotDroidLightBase">
        <item name="bbListItemPaddingLR">15dp</item>
        <item name="bbListItemPaddingTB">10dp</item>
        <item name="bbListItemFontPrimary">18sp</item>
        <item name="bbListItemFontSecondary">15sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidLightCompact" parent="@style/PotDroidLightBase">
        <item name="bbListItemPaddingLR">10dp</item>
        <item name="bbListItemPaddingTB">5dp</item>
        <item name="bbListItemFontPrimary">16sp</item>
        <item name="bbListItemFontSecondary">14sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidDarkBase" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/bbstyle_darkblue</item>
        <item name="colorPrimaryDark">@color/bbstyle_darkblue_semi</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorAccent">@color/bbstyle_lightblue</item>
        <item name="android:windowBackground">@color/bbstyle_darkerblue</item>
        <item name="bbColorPrimary">@color/bbstyle_lightblue</item>
        <item name="bbColorSecondary">@color/bbstyle_darkblue</item>
        <item name="bbColorSecondaryTransparent">@color/bbstyle_darkblue_semi</item>
        <item name="bbColorTertiary">@color/bbstyle_lighterblue</item>
        <item name="bbColorHighlight">@color/white_low</item>
        <item name="bbColorTranslucentBackground">@color/black_low</item>
        <item name="bbTextColorPrimary">@color/white</item>
        <item name="bbTextColorSecondary">@color/white_low</item>
        <item name="bbEditTextBackground">@color/white</item>
        <item name="bbEditTextColor">@color/bbstyle_darkblue</item>
        <item name="bbEditTextHintColor">@color/bbstyle_lightblue</item>
        <item name="bbToolbarBackground">@color/bbstyle_darkblue</item>
        <item name="bbToolbarColor">@color/white</item>
        <item name="bbListSeparatorColor">@color/bbstyle_darkblue</item>
        <item name="bbProgressPrimary">@color/white</item>
        <item name="bbProgressSecondary">@color/bbstyle_lighterblue</item>
        <item name="bbTopicCssFile">bbdark.css</item>
        <item name="bbBackgroundList">@drawable/dark_background_list</item>
        <item name="bbBackgroundListActive">@drawable/dark_background_list_active</item>
        <item name="bbBackgroundTransparentClickable">@drawable/dark_background_transparent_clickable</item>
        <item name="bbCircularTransparentClickable">@drawable/dark_circular_translucent_button_background</item>

        <!-- All dialogs will default to Theme.DARK with this set to true.-->
        <item name="md_dark_theme">false</item>
        <!-- By default, the title text is black or white based on the theme.-->
        <item name="md_title_color">@color/white</item>
        <!--By default, the content text is derived from the ?android:textColorSecondary OS attribute.-->
        <item name="md_content_color">@color/white</item>
        <!--By default, the accent color is derived from the colorAccent attribute of
            AppCompat or android:colorAccent attribute of the Material theme.-->
        <item name="md_accent_color">@color/bbstyle_darkerblue</item>
        <!--By default, the list item text color is black for the light theme and white for the dark theme.-->
        <item name="md_item_color">@color/white</item>
        <!--This overrides the default dark or light dialog background color.
            Note that if you use a dark color here, you should set md_dark_theme to-->
        <item name="md_background_color">@color/bbstyle_lightblue</item>
        <!--This overrides the color used for the top and bottom dividers used whencontent is scrollable-->
        <item name="md_divider_color">@color/bbstyle_darkerblue</item>
        <!--This overrides the selector used on list items and stacked action buttons
        <item name="md_selector">@drawable/selector</item>-->
        <!--This overrides the selector used on action buttons
        <item name="md_btn_selector">@drawable/selector</item>-->
    </style>

