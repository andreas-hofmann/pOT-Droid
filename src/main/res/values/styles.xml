        <!-- All dialogs will default to Theme.DARK with this set to true.-->
        <item name="md_dark_theme">false</item>
        <!-- By default, the title text is black or white based on the theme.-->
        <item name="md_title_color">@color/white</item>
        <!--By default, the content text is derived from the ?android:textColorSecondary OS attribute.-->
        <item name="md_content_color">@color/white</item>
        <!--By default, the accent color is derived from the colorAccent attribute of
            AppCompat or android:colorAccent attribute of the Material theme.-->
        <item name="md_accent_color">@color/bbstyle_darkerblue</item>
        <!--By default, the list item text color is black for the light theme and white for the dark theme.-->
        <item name="md_item_color">@color/white</item>
        <!--This overrides the default dark or light dialog background color.
            Note that if you use a dark color here, you should set md_dark_theme to-->
        <item name="md_background_color">@color/bbstyle_lightblue</item>
        <!--This overrides the color used for the top and bottom dividers used whencontent is scrollable-->
        <item name="md_divider_color">@color/bbstyle_darkerblue</item>
        <!--This overrides the selector used on list items and stacked action buttons
        <item name="md_selector">@drawable/selector</item>-->
        <!--This overrides the selector used on action buttons
        <item name="md_btn_selector">@drawable/selector</item>-->
    </style>

</resources>
