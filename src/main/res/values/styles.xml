        <item name="bbColorSecondary">@color/lightgrey</item>
        <item name="bbColorSecondaryTransparent">@color/lightgrey_transparent</item>
        <item name="bbColorTertiary">@color/lightergrey</item>
        <item name="bbColorHighlight">@color/bbstyle_lightblue</item>
        <item name="bbColorTranslucentBackground">@color/white_low</item>
        <item name="bbTextColorPrimary">@color/darkergrey</item>
        <item name="bbTextColorSecondary">@color/darkgrey</item>
        <item name="bbEditTextBackground">@color/lightergrey</item>
        <item name="bbEditTextColor">@color/bbstyle_darkblue</item>
        <item name="bbEditTextHintColor">@color/grey</item>
        <item name="bbToolbarBackground">@color/bbstyle_lightblue</item>
        <item name="bbToolbarColor">@color/white</item>
        <item name="bbListSeparatorColor">@color/lightergrey</item>
        <item name="bbProgressPrimary">@color/bbstyle_darkblue</item>
        <item name="bbProgressSecondary">@color/bbstyle_lighterblue</item>
        <item name="bbTopicCssFile">bblight.css</item>
        <item name="bbBackgroundList">@drawable/light_background_list</item>
        <item name="bbBackgroundListActive">@drawable/light_background_list_active</item>
        <item name="bbBackgroundTransparentClickable">@drawable/light_background_transparent_clickable</item>
