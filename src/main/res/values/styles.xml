<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PotDroidDark" parent="@style/PotDroidDarkBase">
        <item name="bbListItemPaddingLR">15dp</item>
        <item name="bbListItemPaddingTB">10dp</item>
        <item name="bbListItemFontPrimary">18sp</item>
        <item name="bbListItemFontSecondary">15sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidDarkCompact" parent="@style/PotDroidDarkBase">
        <item name="bbListItemPaddingLR">10dp</item>
        <item name="bbListItemPaddingTB">5dp</item>
        <item name="bbListItemFontPrimary">16sp</item>
        <item name="bbListItemFontSecondary">14sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidLight" parent="@style/PotDroidLightBase">
        <item name="bbListItemPaddingLR">15dp</item>
        <item name="bbListItemPaddingTB">10dp</item>
        <item name="bbListItemFontPrimary">18sp</item>
        <item name="bbListItemFontSecondary">15sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidLightCompact" parent="@style/PotDroidLightBase">
        <item name="bbListItemPaddingLR">10dp</item>
        <item name="bbListItemPaddingTB">5dp</item>
        <item name="bbListItemFontPrimary">16sp</item>
        <item name="bbListItemFontSecondary">14sp</item>
        <item name="bbListItemFontTertiary">12sp</item>
    </style>

    <style name="PotDroidDarkBase" parent="@style/Theme.AppCompat">

        <item name="android:windowBackground">@color/bbstyle_darkerblue</item>

        <item name="bbDarkerItemBackground">@color/bbstyle_lightblue</item>
        <item name="bbItemBackground">@color/bbstyle_lighterblue</item>
        <item name="bbTextColorPrimary">@color/white</item>
        <item name="bbTextColorSecondary">@color/white_low</item>
        <item name="bbTextColorTertiary">@color/bbstyle_lighterblue</item>
        <item name="bbListSeparatorColor">@color/bbstyle_darkblue</item>

        <item name="bbTopicBackgroundColor">?android:attr/windowBackground</item>
        <item name="bbPostBackgroundColor">?attr/bbItemBackground</item>
        <item name="bbPostHeaderBackgroundColor">?attr/bbDarkerItemBackground</item>
        <item name="bbQuoteBackgroundColor">@color/bbstyle_darkblue_low</item>
        <item name="bbQuoteHeaderColor">@color/bbstyle_darkblue_semi</item>
        <item name="bbNewPostGlowColor">@color/white_semi</item>
        <item name="bbMediaBackgroundColor">?attr/bbPostHeaderBackgroundColor</item>
        <item name="bbMediaForegroundColor">?attr/bbTextColorSecondary</item>

        <item name="bbEditTextBackground">@color/white</item>
        <item name="bbEditTextColor">@color/bbstyle_darkblue</item>
        <item name="bbEditTextHintColor">@color/bbstyle_lightblue</item>

        <item name="bbStatusbarBackground">@color/bbstyle_darkblue_semi</item>
        <item name="bbToolbarBackground">@color/bbstyle_darkblue</item>
        <item name="bbToolbarColor">@color/white</item>

        <item name="bbProgressBackground">@color/white</item>
        <item name="bbProgressForeground">@color/bbstyle_lighterblue</item>

        <item name="bbErrorColor">@color/error</item>
        <item name="bbSuccessColor">@color/success</item>
        <item name="bbInfoColor">@color/info</item>

        <!-- styles controling the material dialog look. See
        https://github.com/afollestad/material-dialogs-->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">?attr/bbTextColorPrimary</item>
        <item name="md_content_color">?attr/bbTextColorPrimary</item>
        <item name="md_positive_color">?attr/bbTextColorPrimary</item>
        <item name="md_neutral_color">?attr/bbTextColorSecondary</item>
        <item name="md_negative_color">?attr/bbTextColorSecondary</item>
        <item name="md_link_color">?attr/bbTextColorPrimary</item>
        <item name="md_item_color">?attr/bbTextColorPrimary</item>
        <item name="md_background_color">?attr/bbDarkerItemBackground</item>
        <item name="md_divider_color">?attr/bbListSeparatorColor</item>

        <!-- system styles, only reference other attrs -->
        <item name="colorPrimary">?attr/bbToolbarBackground</item>
        <item name="colorPrimaryDark">?attr/bbStatusbarBackground</item>
        <item name="colorAccent">?attr/bbToolbarBackground</item>
        <item name="android:textColor">?attr/bbToolbarColor</item>
        <item name="android:textColorPrimary">?attr/bbToolbarColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="PotDroidLightBase" parent="@style/Theme.AppCompat.Light">

        <item name="android:windowBackground">@color/white</item>

        <item name="bbDarkerItemBackground">@color/lightergrey</item>
        <item name="bbItemBackground">@color/white</item>
        <item name="bbTextColorPrimary">@color/bbstyle_darkblue</item>
        <item name="bbTextColorSecondary">@color/darkgrey</item>
        <item name="bbTextColorTertiary">@color/bbstyle_lighterblue</item>
        <item name="bbListSeparatorColor">@color/lightgrey</item>

        <item name="bbTopicBackgroundColor">@color/grey</item>
        <item name="bbPostBackgroundColor">@color/white</item>
        <item name="bbPostHeaderBackgroundColor">@color/lightergrey</item>
        <item name="bbQuoteBackgroundColor">@color/lightgrey_transparent</item>
        <item name="bbQuoteHeaderColor">@color/darkgrey</item>
        <item name="bbNewPostGlowColor">@color/white_semi</item>
        <item name="bbMediaBackgroundColor">?attr/bbPostHeaderBackgroundColor</item>
        <item name="bbMediaForegroundColor">?attr/bbTextColorSecondary</item>

        <item name="bbEditTextBackground">@color/lightergrey</item>
        <item name="bbEditTextColor">@color/bbstyle_darkblue</item>
        <item name="bbEditTextHintColor">@color/grey</item>

        <item name="bbStatusbarBackground">@color/bbstyle_darkblue</item>
        <item name="bbToolbarBackground">@color/bbstyle_lightblue</item>
        <item name="bbToolbarColor">@color/white</item>

        <item name="bbProgressBackground">@color/bbstyle_darkblue</item>
        <item name="bbProgressForeground">@color/white</item>

        <item name="bbErrorColor">@color/error</item>
        <item name="bbSuccessColor">@color/success</item>
        <item name="bbInfoColor">@color/info</item>

        <!-- styles controling the material dialog look. See
        https://github.com/afollestad/material-dialogs-->
        <item name="md_dark_theme">false</item>
        <item name="md_title_color">?attr/bbTextColorPrimary</item>
        <item name="md_content_color">?attr/bbTextColorPrimary</item>
        <item name="md_positive_color">?attr/bbTextColorPrimary</item>
        <item name="md_neutral_color">?attr/bbTextColorSecondary</item>
        <item name="md_negative_color">?attr/bbTextColorSecondary</item>
        <item name="md_link_color">?attr/bbTextColorPrimary</item>
        <item name="md_item_color">?attr/bbTextColorPrimary</item>
        <item name="md_background_color">@color/bbstyle_lighterblue</item>
        <item name="md_divider_color">?attr/bbListSeparatorColor</item>

        <!-- system styles, only reference other attrs -->
        <item name="colorPrimary">?attr/bbToolbarBackground</item>
        <item name="colorPrimaryDark">?attr/bbStatusbarBackground</item>
        <item name="colorAccent">?attr/bbToolbarBackground</item>
        <item name="android:textColor">?attr/bbToolbarColor</item>
        <item name="android:textColorPrimary">?attr/bbToolbarColor</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <!-- Settings theme -->
    <style name="Theme.pOTSettings" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorAccent">@color/bbstyle_lightblue</item>
        <item name="colorPrimary">@color/bbstyle_lightblue</item>
        <item name="colorPrimaryDark">@color/bbstyle_darkblue</item>
        <item name="drawerArrowStyle">@style/Theme.pOTSettings.DrawerArrowStyle</item>
        <item name="android:textColor">@color/bbstyle_lightblue</item>
        <item name="toolbarStyle">@style/Theme.pOTSettings.Toolbar</item>
        <!-- If you find the preference categories' bottom margin too big, uncomment this -->
        <!--<item name="preferenceCategory_marginBottom">0dp</item>-->
    </style>

    <style name="Theme.pOTSettings.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.pOTSettings.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/bbstyle_lightblue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="titleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance</item>
        <item name="subtitleTextAppearance">@style/Theme.MyTheme.Toolbar.TextAppearance.Subtitle
        </item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Toolbar.TextAppearance.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PagerTitleStrip">
        <item name="android:textColor">@color/bbstyle_lightblue</item>
    </style>
</resources>
