<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/paginate_view"
              android:layout_width="match_parent"
              android:layout_centerHorizontal="true"
              android:layout_height="wrap_content"
              android:background="@color/bbstyle_darkblue_semi"
              android:orientation="horizontal"
              android:gravity="center_vertical|center_horizontal"
              android:layout_alignParentBottom="true">

    <com.mde.potdroid.views.IconButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/icon_fast_backward"
            android:id="@+id/button_frwd"
            android:textSize="24sp"
            android:visibility="invisible"
            android:background="@drawable/background_transparent_clickable"
            android:textColor="@color/white"/>

    <com.mde.potdroid.views.IconButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/icon_backward"
            android:id="@+id/button_rwd"
            android:visibility="invisible"
            android:background="@drawable/background_transparent_clickable"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    <!--<com.mde.potdroid.views.IconButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/icon_refresh"
            android:id="@+id/button_refresh"
            android:textSize="24sp"
            android:textColor="@color/white"/>-->

    <com.mde.potdroid.views.IconButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/icon_forward"
            android:background="@drawable/background_transparent_clickable"
            android:id="@+id/button_fwd"
            android:visibility="invisible"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    <com.mde.potdroid.views.IconButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="@string/icon_fast_forward"
            android:background="@drawable/background_transparent_clickable"
            android:id="@+id/button_ffwd"
            android:visibility="invisible"
            android:textSize="24sp"
            android:textColor="@color/white"/>

</LinearLayout>