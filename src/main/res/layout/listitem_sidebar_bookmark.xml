<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/bbBackgroundList"
                android:padding="15dp"
                android:layout_gravity="center_vertical">

    <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:scrollHorizontally="false"
            android:textSize="18sp"
            android:ellipsize="end"
            android:textColor="?attr/bbTextColorPrimary"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/newposts"/>

    <TextView
            android:id="@+id/newposts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:background="?attr/bbColorSecondary"
            android:textColor="?attr/bbTextColorSecondary"/>
</RelativeLayout>