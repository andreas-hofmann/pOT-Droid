<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/sidebar"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bbstyle_lightblue"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/nav_buttons"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_home"
                android:id="@+id/button_home"
                android:background="@drawable/sidebar_button_background"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_pm"
                android:id="@+id/button_pm"
                android:background="@drawable/sidebar_button_background"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_weight="1"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_favorite"
                android:id="@+id/button_bookmarks"
                android:background="@drawable/sidebar_button_background"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_weight="1"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_preferences"
                android:id="@+id/button_preferences"
                android:background="@drawable/sidebar_button_background"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_weight="1"/>

    </LinearLayout>

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_cap_bookmarks"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:textSize="14sp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@drawable/sidebar_bookmarkbutton_background"
            android:textColor="@color/white"
            android:id="@+id/refresh_bookmarks"
            android:gravity="left|center_vertical"
            android:textAlignment="textStart"/>

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/update_progress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:indeterminate="true"
            app:spb_sections_count="12"
            app:spb_stroke_width="2dp"
            app:spb_stroke_separator_length="4dp"
            android:visibility="gone"
            app:spb_color="@color/white"/>

    <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="2dp"
            android:background="@color/bbstyle_darkblue"/>

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:id="@+id/listview_bookmarks"
            android:divider="@color/bbstyle_darkblue"
            android:dividerHeight="1dp"/>

    <TextView
            android:id="@+id/empty_bookmarks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:textSize="13sp"
            android:gravity="center"
            android:text="@string/no_unread_bookmarks"
            android:visibility="gone"/>


</LinearLayout>
