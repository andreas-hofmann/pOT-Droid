<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bbstyle_lightblue"
        android:orientation="vertical">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/nav_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/text_form_title"
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:textSize="16sp"
                android:gravity="left|center_vertical"
                android:text="Antwort verfassen"
                android:background="@color/bbstyle_darkblue"
                android:layout_weight="2"
                android:paddingLeft="5pt"
                />

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_accept"
                android:id="@+id/button_send"
                android:background="@drawable/sidebar_button_background"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="48dip"
                android:src="?attr/menu_icon_cancel"
                android:id="@+id/button_cancel"
                android:background="@drawable/sidebar_button_background"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:layout_weight="1"/>

    </LinearLayout>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_progress"
            android:indeterminateOnly="true"
            android:layout_marginBottom="-8dp"
            android:layout_marginTop="-4dp"
            android:visibility="invisible"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_title"
            android:layout_gravity="center"
            android:hint="Titel"
            android:background="@color/white"
            android:padding="3pt"
            android:layout_margin="5pt"
            android:textColor="@color/bbstyle_darkblue"
            android:textSize="16sp"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:padding="3pt"
            android:layout_marginBottom="5pt"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:hint="Text"
            android:textColor="@color/bbstyle_darkblue"
            android:scrollbars="vertical"
            android:gravity="top"
            android:textSize="16sp"/>


</LinearLayout>
